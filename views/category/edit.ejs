<h1 class="mb-5">Edit Category</h1>

<form method="POST" action="/category/update" enctype="multipart/form-data">
    <input type="hidden" id="id"  name="id" value="<%= category._id %>">
    <div class="row g-3 align-items-center mb-4">
        <div class="col-auto">
            <label for="name" class="col-form-label text-body-secondary">Category Name</label>
        </div>
        <div class="col-auto">
            <input type="text" id="name" name="name" value="<%= category.name %>" class="form-control">
        </div>
    </div>
    <div class="col-auto">
        <label for="categoryImage" class="col-form-label text-body-secondary">Current Category Image</label>
    </div>
    <div class="col-auto ms-5 mb-3">
        <img src="<%= category.image %>" alt="Current Category Image" width="250" height="150" id="categoryImage">
    </div>
    <div class="d-flex gap-3 col-sm-3 mb-5">
        <label for="newCategoryImage" class="col-form-label text-body-secondary  col-auto">New Category Image</label>
        <input type="file" name="image" accept="image/png, image/jpeg, image/jpg" class="form-control col-auto" id="newCategoryImage"/>
    </div>
    <button  type="submit" class="btn btn-danger">Update Category</button>
    <a href="/category/index"><button  type="button" class="btn btn-secondary">Cancle</button></a>
</form>
