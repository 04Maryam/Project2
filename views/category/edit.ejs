<h1 class="mb-5">Edit Category</h1>

<form method="POST" action="/category/update" enctype="multipart/form-data">
    <input type="hidden" id="id"  name="id" value="<%= category._id %>">
    <div class="row g-3 align-items-center mb-4">
    <div class="col-auto">
        <label>Category Name:</label>
        <input type="text" id="name" name="name" value="<%= category.name %>">
    </div>
    <br>
    <div class="col-auto">
        <label>Current Category Image:</label>
        <img src="<%= category.image %>" alt="Current Category Image" width="100">
    </div>
    <br>
    <div class="col-auto">
        <label>New Category Image:</label>
        <input type="file" name="image" accept="image/png, image/jpeg, image/jpg" />
    </div>
    </div>
    <button  type="submit" class="btn btn-danger">Update Category</button>
    <a href="/category/index"><button  type="button" class="btn btn-secondary">Cancle</button></a>
</form>
